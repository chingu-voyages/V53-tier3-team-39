{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "module": "esnext",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "src", // Set the base directory for imports
    "paths": {
      "@/app/*": ["app/*"], // Alias for the app directory
      "@/components/*": ["components/*"], // Alias for the components directory
      "@/lib/*": ["lib/*"], // Alias for the lib directory
      "@/types/*": ["types/*"] // Alias for the types directory
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
